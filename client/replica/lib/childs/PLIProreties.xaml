<controls:ChildWindow
        x:Class="controls.childs.replica.sl.PLIProreties"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
        xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
		xmlns:slc="clr-namespace:controls.replica.sl"
        Width="400" Height="auto">
    <Grid x:Name="LayoutRoot" Margin="2">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*" />
		</Grid.ColumnDefinitions>
		<slc:Classes x:Name="_ui_ctrClasses" Grid.Column="0"  Grid.Row="0"/>

		<Button Grid.Column="0" x:Name="CancelButton" Content="Cancel" Click="CancelButton_Click" Width="75" Height="23" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,12,0,0" Grid.Row="1" />
		<Button Grid.Column="0" x:Name="OKButton" Content="OK" Click="OKButton_Click" Width="75" Height="23" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,12,79,0" Grid.Row="1" />
    </Grid>
</controls:ChildWindow>